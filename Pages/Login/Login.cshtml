@page
@model Gestor_de_Proyectos_Académicos.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
        
}
<head>
    <link href="~/css/LoginCSS/Login.css" rel="stylesheet" asp-append-version="true" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
                
                <div class="card p-4">
                    <form method="post">
                        <!--  CORREO ELECTRÓNICO -->
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>

                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-user" style="color: #00101c;"></i>
                            </span>
                            <input type="email"
                                   class="form-control"
                                   name="CorreoUsuario"
                                   value="@Model.CorreoUsuario"
                                   placeholder="usuario@ejemplo.com"
                                   required>
                        </div>

                        <!-- 🔒 CONTRASEÑA -->
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>

                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-lock" style="color: #00101c;"></i>
                                </span>
                                <input type="password"
                                       class="form-control"
                                       name="ContrasenaUsuario"
                                       placeholder="Ingrese su contraseña"
                                       required>
                            </div>

                            <div class="d-grid gap-2 col-10 mx-auto botones">
                                <button type="submit" class="btn btn-primary w-100 mb-3">Ingresar</button>

                                
                                    <a href="/Registro/Registro" class="btn btn-primary w-100 mb-3">
                                           Crear Cuenta
                                    </a>
                               
                            </div>

                       

                        <!--  BOTÓN PARA REGISTRARSE -->
                       

                        @if (!string.IsNullOrEmpty(Model.Mensaje))
                        {
                            <div class="alert alert-danger mt-3">@Model.Mensaje</div>
                        }

                        <!-- 🎉 MENSAJE DE REGISTRO EXITOSO -->
                        @if (TempData["RegistroExitoso"] != null)
                        {
                            <div class="alert alert-success mt-3 text-center">
                                <i class="fas fa-check-circle"></i> @TempData["RegistroExitoso"]
                            </div>
                        }
                      </div>
                    </form>

                </div>
                
            
        </div>
    </div>
</div>

