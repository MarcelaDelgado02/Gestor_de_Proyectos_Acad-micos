@page
@model Gestor_de_Proyectos_Académicos.Pages.Estudiante.inicio.InicioEstModel
@{
    ViewData["Title"] = "Inicio Estudiante";
    Layout = "_Layout";
}

<div class="container mt-4">
    <!-- Header con información del usuario -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h4 class="card-title">
                        <i class="fas fa-user-graduate me-2"></i>
                        @Model.NombreUsuario
                    </h4>
                    <p class="card-text mb-0">
                        <strong>Cédula:</strong> @Model.CedulaUsuario |
                        <strong>Rol:</strong> Estudiante
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Proyectos del Estudiante -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-project-diagram me-2"></i>
                        Mis Proyectos
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Mensaje))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>@Model.Mensaje
                        </div>
                    }

                    @if (Model.TieneProyectos)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre del Proyecto</th>
                                        <th>Descripción</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Final</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var proyecto in Model.Proyectos)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@proyecto.NombreProyecto</strong>
                                            </td>
                                            <td>
                                                <!-- Botón desplegable para descripción - Solo Bootstrap -->
                                                <button class="btn btn-sm btn-outline-info"
                                                        type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#desc-@proyecto.IdProyecto"
                                                        aria-expanded="false"
                                                        aria-controls="desc-@proyecto.IdProyecto">
                                                    Show Description
                                                </button>

                                                <!-- Descripción desplegable -->
                                                <div class="collapse mt-2" id="desc-@proyecto.IdProyecto">
                                                    <div class="card card-body">
                                                        @if (!string.IsNullOrEmpty(proyecto.DescripcionProyecto))
                                                        {
                                                            @proyecto.DescripcionProyecto
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Sin descripción</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@proyecto.FechaInicioProyecto.ToString("dd/MM/yyyy")</td>
                                            <td>@proyecto.FechaFinalProyecto.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-@proyecto.ColorEstado">
                                                    @proyecto.EstadoProyecto
                                                </span>
                                            </td>
                                            <td>
                                                <!-- Botón para ir a las tareas del proyecto -->
                                                <a href="/Estudiante/Tareas/MisTareas?proyectoId=@proyecto.IdProyecto"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-tasks me-1"></i> Ver Tareas
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else if (string.IsNullOrEmpty(Model.Mensaje))
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay proyectos para mostrar</h5>
                            <p class="text-muted">No estás participando en ningún proyecto actualmente.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

