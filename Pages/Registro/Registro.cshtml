@page
@model Gestor_de_Proyectos_Académicos.Pages.Registro.RegistroModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<head>
    <link href="~/css/RegistroCSS/Registro.css" rel="stylesheet" asp-append-version="true" />


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h3><i class="fas fa-user-plus"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Cédula *</label>
                                    <input asp-for="NuevoUsuario.cedulaUsuario" class="form-control"
                                           placeholder="Ej: 123456789" required />
                                    <span asp-validation-for="NuevoUsuario.cedulaUsuario" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Nombre Completo *</label>
                                    <input asp-for="NuevoUsuario.nombreUsuario" class="form-control"
                                           placeholder="Ej: Juan Pérez García" required />
                                    <span asp-validation-for="NuevoUsuario.nombreUsuario" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Correo Electrónico *</label>
                                    <input asp-for="NuevoUsuario.correoUsuario" type="email" class="form-control"
                                           placeholder="Ej: usuario@ejemplo.com" required />
                                    <span asp-validation-for="NuevoUsuario.correoUsuario" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Teléfono *</label>
                                    <input asp-for="NuevoUsuario.telefonoUsuario" class="form-control"
                                           placeholder="Ej: 8888-8888" required />
                                    <span asp-validation-for="NuevoUsuario.telefonoUsuario" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Contraseña *</label>
                                    <input asp-for="NuevoUsuario.contrasenaUsuario" type="password" class="form-control"
                                           placeholder="Ingrese su contraseña" required />
                                    <span asp-validation-for="NuevoUsuario.contrasenaUsuario" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Rol *</label>
                                    <select asp-for="NuevoUsuario.rolUsuario" class="form-select" required>
                                        <option value="">Seleccione un rol</option>
                                        <option value="1"> Profesor</option>
                                        <option value="2"> Estudiante</option>
                                    </select>
                                    <span asp-validation-for="NuevoUsuario.rolUsuario" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn-primary w-100 py-2">
                                    <i class="fas fa-user-plus"></i> Registrar Usuario
                                </button>

                                <div class="text-center mt-3">
                                    <a href="/Login/Login" class="btn">
                                        <i class="fas fa-arrow-left"></i> Volver al Login
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Mensajes de Error -->
                        @if (!string.IsNullOrEmpty(Model.Error))
                        {
                            <div class="alert alert-danger mt-3 text-center">
                                <i class="fas fa-exclamation-triangle"></i> @Model.Error
                            </div>
                        }

                        <!-- Mensajes de Éxito (si permanece en la página) -->
                        @if (!string.IsNullOrEmpty(Model.Mensaje))
                        {
                            <div class="alert alert-success mt-3 text-center">
                                <i class="fas fa-check-circle"></i> @Model.Mensaje
                            </div>
                        }
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Los campos marcados con * son obligatorios</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

