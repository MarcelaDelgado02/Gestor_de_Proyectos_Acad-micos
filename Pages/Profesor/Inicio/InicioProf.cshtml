@page
@model Gestor_de_Proyectos_Académicos.Pages.Profesor.Inicio.InicioProfModel
@{
    ViewData["Title"] = "Inicio Profesor";
}

<div class="container mt-4">
    
    <hr />

    <!-- Mensajes globales -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">@TempData["Mensaje"]</div>
    }
    <!-- Botón para mostrar el card de creación -->
    <button class="btn btn-primary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#cardCrearProyecto" aria-expanded="false" aria-controls="cardCrearProyecto">
        + Crear nuevo proyecto
    </button>
    <!-- Botón Reporte de Proyectos -->
    <a href="/ReporteProyectos/ReporteProyectos"
       class="btn btn-sm btn-secondary">
        <i class="fa-solid fa-chart-column me-1"></i> Reporte Proyectos
    </a>
   


    <!-- Card colapsable de creación -->
    <div class="collapse" id="cardCrearProyecto">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                Crear Proyecto
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="CrearProyecto">
                    <div class="mb-3">
                        <label class="form-label">Nombre del Proyecto</label>
                        <input asp-for="NuevoProyecto.NombreProyecto" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea asp-for="NuevoProyecto.DescripcionProyecto" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha Inicio</label>
                            <input asp-for="NuevoProyecto.FechaInicioProyecto" type="date"
                                   class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha Final</label>
                            <input asp-for="NuevoProyecto.FechaFinalProyecto" type="date"
                                   class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <select asp-for="NuevoProyecto.EstadoProyecto" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="En Progreso">En Progreso</option>
                            <option value="Finalizado">Finalizado</option>
                        </select>
                    </div>

                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Asignar Estudiantes al Proyecto</label>
                        <select asp-for="EstudiantesSeleccionados"
                                class="form-select"
                                multiple
                                size="8">
                            @foreach (var est in Model.EstudiantesDisponibles)
                            {
                                <option value="@est.IdUsuario">@est.nombreUsuario </option>
                            }
                        </select>
                        <small class="text-muted">Mantén presionado Ctrl para seleccionar varios estudiantes.</small>
                    </div>

                    <button type="submit" class="btn btn-success">
                        💾 Guardar Proyecto
                    </button>
                </form>

            </div>
        </div>
    </div>

    <!-- Lista de proyectos -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            Proyectos del Profesor
        </div>
        <div class="card-body">
            @if (!Model.TieneProyectos)
            {
                <p class="text-muted">@Model.Mensaje</p>
            }
            else
            {
                <div class="list-group">
                    @foreach (var proyecto in Model.Proyectos)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5>@proyecto.NombreProyecto</h5>
                                <p class="mb-1">@proyecto.DescripcionProyecto</p>
                                <small class="text-muted">
                                    @proyecto.FechaInicioProyecto.ToShortDateString() - @proyecto.FechaFinalProyecto.ToShortDateString()
                                </small>
                            </div>

                            <div class="d-flex align-items-center gap-2">
                                <span class="badge bg-@proyecto.ColorEstado text-uppercase">@proyecto.EstadoProyecto</span>



                                <!-- Botón Editar -->
                                <button class="btn" data-bs-toggle="modal"
                                        data-bs-target="#editarProyectoModal_@proyecto.IdProyecto">
                                    <span>
                                        <i class="fa-solid fa-pen-to-square" style="color: #00101c;"></i>
                                    </span>
                                </button>

                                <!-- Botón Eliminar -->
                                <form method="post" asp-page-handler="EliminarProyecto" onsubmit="return confirm('¿Seguro que deseas eliminar este proyecto?');">
                                    <input type="hidden" name="idProyecto" value="@proyecto.IdProyecto" />
                                    <button type="submit" class="btn ">
                                        <span>
                                            <i class="fa-solid fa-trash" style="color: #00101c;"></i>
                                        </span>
                                    </button>
                                </form>

                                

                                <!-- Botón Reporte Estudiantes de este proyecto -->
                                <a href="/ReporteEstudiantes/ReporteEstudiantes?proyectoId=@proyecto.IdProyecto"
                                   class="btn btn-sm btn-info text-white">
                                    <i class="fa-solid fa-user-graduate me-1"></i> Estudiantes
                                </a>



                                <a href="/Profesor/Inicio/TareasProfesor?IdProyecto=@proyecto.IdProyecto"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-tasks me-1"></i> Ver Tareas
                                </a>

                            </div>
                        </div>

                        <!-- Modal Editar Proyecto -->
                        <div class="modal fade" id="editarProyectoModal_@proyecto.IdProyecto" tabindex="-1" aria-labelledby="editarProyectoLabel_@proyecto.IdProyecto" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-primary text-white">
                                        <h5 class="modal-title" id="editarProyectoLabel_@proyecto.IdProyecto">Editar Proyecto</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post" asp-page-handler="EditarProyecto">
                                            <input type="hidden" asp-for="NuevoProyecto.IdProyecto" value="@proyecto.IdProyecto" />

                                            <div class="mb-3">
                                                <label class="form-label">Nombre del Proyecto</label>
                                                <input asp-for="NuevoProyecto.NombreProyecto" class="form-control" value="@proyecto.NombreProyecto" required />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Descripción</label>
                                                <textarea name="DescripcionProyecto" class="form-control" rows="3">@proyecto.DescripcionProyecto</textarea>


                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Fecha Inicio</label>
                                                    <input asp-for="NuevoProyecto.FechaInicioProyecto" type="date"
                                                           value="@proyecto.FechaInicioProyecto.ToString("yyyy-MM-dd")" class="form-control" required />
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Fecha Final</label>
                                                    <input asp-for="NuevoProyecto.FechaFinalProyecto" type="date"
                                                           value="@proyecto.FechaFinalProyecto.ToString("yyyy-MM-dd")" class="form-control" required />
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Estado</label>
                                                <select asp-for="NuevoProyecto.EstadoProyecto" class="form-select">
                                                    <option value="Activo" selected="@(proyecto.EstadoProyecto == "Activo")">Activo</option>
                                                    <option value="En Progreso" selected="@(proyecto.EstadoProyecto == "En Progreso")">En Progreso</option>
                                                    <option value="Finalizado" selected="@(proyecto.EstadoProyecto == "Finalizado")">Finalizado</option>
                                                </select>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-success">💾 Guardar cambios</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
