@page
@model Gestor_de_Proyectos_Académicos.Pages.ReporteEstudiantes.ReportePersonalModel
<head>
    <link href="~/css/ReporteEstudiantes/ReporteEstudiantesCSS.css" rel="stylesheet" asp-append-version="true" />



    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<h2>Estudiantes del Proyecto</h2>

<div class="text-lg-start mt-3">


    <a class="btn btn-secondary" asp-page="/Profesor/Inicio/inicioProf">
        Volver
    </a>
</div>

@if (Model.Estudiantes.Any())
{
    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Estudiante</th>
                <th>Tareas Completadas</th>
                <th>Proyecto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Estudiantes)
            {
                <tr>
                    <td>@e.NombreEstudiante</td>
                    <td>@e.TareasCompletadasEstudiante</td>
                    <td>@e.NombreProyecto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-3"> No hay estudiantes asignados a este proyecto.</p>
}
